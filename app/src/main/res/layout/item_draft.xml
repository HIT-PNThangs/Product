<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/type_draft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/roboto_regular"
        android:text="Đồ ăn"
        app:layout_constraintEnd_toEndOf="@+id/img_draft"
        app:layout_constraintStart_toStartOf="@+id/img_draft"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/img_draft"
        android:layout_width="@dimen/_72sdp"
        android:layout_height="@dimen/_72sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:src="@drawable/burger_popular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type_draft"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/name_draft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Kem trà sữa"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_draft"
        app:layout_constraintTop_toBottomOf="@+id/type_draft"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/address_draft"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:fontFamily="@font/roboto_regular"
        android:maxLines="2"
        android:text="Nguyên Xá, P.Minh Khai, Bắc Từ Liêm Hà, Nội"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/name_draft"
        app:layout_constraintTop_toBottomOf="@+id/name_draft"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/price_draft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="55,000đ (1 chiếc)"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/img_draft"
        app:layout_constraintStart_toStartOf="@+id/address_draft"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>